{
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "58.0"
    }
  },

  "name": "FlixMate",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["index.js"],
      "matches": ["http://localhost:5173/*"]
    },
    {
      "js": ["flixmate.js"],
      "matches": ["https://netflix.com/*"]
    }
  ],
  "permissions": ["storage"],
  "env": {
    "API_URL": "http://localhost:5005"
  }
}
